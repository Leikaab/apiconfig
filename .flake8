[flake8]
# Include docstring checks (D), but suppress them globally
select = B,C,D,E,F,W,T4
ignore = E203, E266, E501, W503, D
max-line-length = 150
max-complexity = 18

# Don't run checks on these files
exclude =
    .coveragerc

docstring-convention = numpy

# Only run docstring checks (D) on these files â€” others still ignore D
per-file-ignores =
    apiconfig/auth/base.py: E203,E266,E501,W503
    apiconfig/auth/strategies/api_key.py: E203,E266,E501,W503